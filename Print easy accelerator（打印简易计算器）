#define _CRT_SECURE_NO_WARNINGS

#include<stdio.h>

int main()
{
	int a = 0;
	int b = 0;
	char distinguish = ' ';
	int add = 0;
	int subtract = 0;
	int multiply = 0;
	int divide = 0;
	printf("请输入两个数(please enter two numbers)：");
	scanf("%d %c %d", &a, &distinguish,&b);
	if (distinguish == '+')
	{
		add = a + b;
		printf("add = %d\n", add);
	}
	else if (distinguish == '-')
	{
		subtract = a - b;
		printf("subtract = %d\n", subtract);
	}
	else if (distinguish == '*')
	{
		multiply = a * b;
		printf(" multiply = %d\n", multiply);
	}
	else if (distinguish == '/')
	{
		divide = a / b;
		printf("divide = %d\n", divide);
	}
	else
		printf("错误(error)");
	return 0;
}
