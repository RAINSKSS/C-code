#include<stdio.h>



int main()

{

int i = 0;

int num = 0;

int j = 0;

printf("请输入一个整数(please enter a number:)：");

scanf("%d", &num);

printf("偶数位(even digit:)：");

for (j = 1; j <= 31; j += 2)

{

printf("%d ", (num >> j) & 1);

}

printf("\n");

printf("奇数位(odd digit：)：");

for (i = 2; i <= 32; i += 2)

{

printf("%d ", (num >> i) & 1);



}

printf("\n");

return 0;

}

