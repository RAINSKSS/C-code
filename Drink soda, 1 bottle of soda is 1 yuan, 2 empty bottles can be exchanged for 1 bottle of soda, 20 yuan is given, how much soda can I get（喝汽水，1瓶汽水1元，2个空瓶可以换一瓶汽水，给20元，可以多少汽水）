	//method 1
int main()
{
	int money = 0;
	int total = 0;
	int empty = 0;
 
 
	scanf("%d", &money);
	

	total = money;
	empty = money;
	while(empty>1)
	{
		total += empty/2;
		empty = empty/2+empty%2;
	}
 
 
	return 0;
}

	//method 2

int main()
{
	int money = 0;
	int total = 0;
	int empty = 0;
 
 
	scanf("%d", &money);
	

	if(money <= 0)
	{
		total = 0;
	}
	else
	{
		total = money*2-1;
	}
	printf("total = %d\n", total);
 
 
	return 0;
}
